@model IEnumerable<GestionImmobiliere.Models.Logement>

@{
    ViewBag.Title = "Index";
}

<h4 class="text-decoration-underline">Liste des logements :</h4>

<p>
    @Html.ActionLink("Créer un nouveau Logement", "Create", new { area = "" }, new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table table-striped table-hover" id="Logement_Table">
    <thead>
        <tr class="text-center">

            <th>
                @Html.DisplayNameFor(model => model.Id_property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress_property)
            </th>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.Complement_adress_property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postal_code_property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Town_property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type_property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rental_property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Charge_property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deposit_property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State_property)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">

                <td>
                    @Html.DisplayFor(modelItem => item.Id_property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress_property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Complement_adress_property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postal_code_property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Town_property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type_property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rental_property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Charge_property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deposit_property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State_property, new { @class = "State_property" })

                </td>
                <td class="col-3">
                    @Html.ActionLink("Editer", "Edit", new { id = item.Id_property }, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id_property }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id_property }, new { @class = "btn btn-sm btn-danger" })
                </td>

            </tr>
        }
    </tbody>

</table>


@section scripts
{
    <script>
        $(document).ready(function () { $("#Logement_Table").DataTable() })
    </script>
}

