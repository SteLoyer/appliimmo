@model IEnumerable<GestionImmobiliere.Models.Owner>

@{
    ViewBag.Title = "Propriétaires";
}

<h4 class="text-decoration-underline">Liste des propriétaires :</h4>



<p>
    
        @Html.ActionLink("Créer un nouveau propriétaire", "Create", new { area = "" }, new { @class = "btn btn-sm btn-primary my-2" })
   
</p>
<table class="table table-striped table-hover" id="Owner_Table">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Name_owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First_name_owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_mail_owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone_owner)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.Name_owner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.First_name_owner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.E_mail_owner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone_owner)
                </td>
                <td>
                    @Html.ActionLink("Editer", "Edit", new { id = item.Id_owner }, new { @class = "btn btn-sm btn-primary" })
                    @Html.ActionLink("Détails", "Details", new { id = item.Id_owner }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id_owner }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }

    </tbody>



</table>

@section scripts
{
    <script>
        $(document).ready(function () { $("#Owner_Table").DataTable() })
    </script>
}
