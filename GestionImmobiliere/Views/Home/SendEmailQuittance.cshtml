@model GestionImmobiliere.Models.Rental_Payment
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Send your comments.</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Name_tenant , new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name_tenant, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name_tenant)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.First_name_tenant, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.First_name_tenant, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.First_name_tenant)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email_tenant, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Email_tenant, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email_tenant)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



