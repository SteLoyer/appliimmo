@model IEnumerable<GestionImmobiliere.Models.Parameters>

@{
    ViewBag.Title = "Index";
}

<h4 class="text-decoration-underline">Paramètres :</h4>


<table class="table table-striped table-hover col-12" id="Proriet">
    <thead>
        <tr class="text-center row">
            <th class="col-2 border border-secondary ">Paramètres</th>
            <th class="col-2 border border-secondary">Valeur</th>
            
            <th class="col-1"></th>
        </tr>
    </thead>
    <tbody>
        <tr class="text-center row">
            <th class="col-2 border border-secondary"> @Html.DisplayNameFor(model => model.Agency_taxe)</th>
            <td class="col-2 border border-secondary">
                @foreach (var item in Model)
                {
                    @Html.DisplayFor(modelItem => item.Agency_taxe, "{0:0.00%}")

                }
            </td>
            <td class="col-1 border border-secondary">
                @Html.ActionLink("Modifier", "Edit", new { id = "/1" }, new { @class = "btn btn-sm btn-primary" })
            </td>

        </tr>
    </tbody>

</table>



@section scripts
{
    <script>
        $(document).ready(function () { $("#Prorietes").DataTable() })
    </script>
}

