@model GestionImmobiliere.Models.Logement


@{
    ViewBag.Title = "Créer logement";
    var db = new GestionImmobiliere.DataContext.ApplicationDbContext() ; // Déclaration de la variable db
    ViewBag.OwnerList = new SelectList(db.Owners, "Id_owner", "Name_owner");

}

<h4 class="text-decoration-underline">Créer un logement :</h4>


@using (Html.BeginForm())
{
