            <textarea id="Lease_report" name="Lease_report" class="form-control control-label col-md-12" rows="6">
             @Model.Lease_report
            </textarea>
            @Html.ValidationMessageFor(model => model.Lease_report, "", new { @class = "text-danger" })
        </div>
